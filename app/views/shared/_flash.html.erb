<div class="fixed-bottom-custom d-flex align-items-end justify-content-end px-4 py-6">
  <div class="max-w-sm w-100 h-24 shadow-lg rounded px-4 py-3 relative custom-border text-white pointer-events-auto <%= flash_class(level) %>">
    <div class="p-2">
      <div class="d-flex align-items-start">
        <div class="ms-3 flex-grow-1 pt-1">
          <p class="small">
            <%= content %>
          </p>
        </div>
        <div class="ms-4 d-flex">
          <button class="btn btn-link p-0 text-white" style="line-height: 1;" onclick="this.closest('.fixed-bottom-custom').remove()">
            <%= inline_svg_tag 'close.svg', class: 'h-4 w-4' %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>